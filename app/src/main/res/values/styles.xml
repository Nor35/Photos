<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Photos.Day.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primaryLightColor</item>
    </style>

    <style name="Widget.Photos.Night.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primaryDarkColor</item>
    </style>


    <style name="Widget.Photos.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="Widget.Photos.Day.TextView" parent="Widget.Photos.TextView">
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="Widget.Photos.Night.TextView" parent="Widget.Photos.TextView">
        <item name="android:textColor">@color/primaryColor</item>
    </style>


    <style name="text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>